generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id          String   @id @default(cuid())
  title       String
  date        DateTime
  venue       String
  priceAdult  Int
  priceChild  Int
  createdAt   DateTime @default(now())
  orders      Order[]

  @@index([date])
}


model Order {
  id            String   @id @default(cuid())
  eventId       String
  quantity      Int
  totalAmount   Int
  stripeIntent  String
  status        String   @default("pending")
  createdAt     DateTime @default(now())
  ticketUrl     String?
  email         String
  adultQuantity Int?
  childQuantity Int?
  contactNo     String?
  name          String?
  usedAt        DateTime?
  event         Event    @relation(fields: [eventId], references: [id])

  @@index([eventId])
  @@index([contactNo])
  @@index([email])
  @@index([usedAt])
  @@index([createdAt])
  @@index([eventId, contactNo]) // for fast phone search inside event
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // hashed password
  name      String?
  role      String   @default("admin") // optional: admin, staff, etc.
  createdAt DateTime @default(now())
}

